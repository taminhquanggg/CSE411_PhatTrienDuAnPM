@using CSE_WebEducation
@using ObjectInfo;
@using CommonLib;

@{

    CSE_UsersInfo info = new CSE_UsersInfo();
    if (ViewBag.User_Info != null)
    {
        info = ViewBag.User_Info;
    }

}

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="header-report">
            <h3>Xem chi tiết thông tin tài khoản</h3>
            <button class="btn-close" onclick="ClosePopupDialog('dPopup', false);"><img src="~/bidding_lib/img/icon-close.svg" alt="img"></button>
        </div>

        <form id="fromInsert" enctype="multipart/form-data">
            <div class="body-report">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="flex-report">
                            <div class="title-report">Tên đăng nhập </div>
                            <div class="field-report">
                                <input type="text" id="txtUser_Name" maxlength="100" name="txtUser_Name" autocomplete="off" tabindex="1" disabled value="@info.User_Name">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="flex-report">
                            <div class="title-report">Tên đầy đủ </div>
                            <div class="field-report">
                                <input type="text" id="txtFullname" name="txtFullname" autocomplete="off" maxlength="500" tabindex="4" disabled value="@info.Full_Name">
                            </div>
                        </div>
                    </div>
                    @*<div class="col-lg-12">
                        <div class="flex-report">
                            <div class="title-report">Loại tài khoản </div>
                            <div class="field-report">
                                <input type="text" id="txtUserType" name="txtUserType" autocomplete="off" maxlength="500" tabindex="5" disabled value="@info.User_Type_Text">
                            </div>
                        </div>
                    </div>*@
                    <div class="col-lg-12">
                        <div class="flex-report">
                            <div class="title-report">Trạng thái </div>
                           <div class="field-report">
                                <input type="text" id="txtStatus" name="txtStatus" autocomplete="off" maxlength="500" tabindex="6" disabled value="@info.Status_Text">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="flex-report">
                            <div class="title-report">Email</div>
                            <div class="field-report">
                                <input class="ip-popup" type="text" id="txtEmail" name="txtEmail" tabindex="7" disabled value="@info.Email">
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="flex-report">
                            <div class="title-report">Số điện thoại</div>
                            <div class="field-report">
                                <input class="ip-popup" type="text" id="txtPhone" name="txtPhone" tabindex="8" disabled value="@info.Phone">
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="flex-report">
                            <div class="title-report">CCCD/CMND</div>
                            <div class="field-report">
                                <input class="ip-popup" type="text" id="txtIdentityCard" name="txtIdentityCard" tabindex="9" disabled value="@info.Identity_Card">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="foot-report text-right">
                <button class="btn-cancel" type="button" id="btnExit" onclick="ClosePopupDialog('dPopup', false);"><img src="~/bidding_lib/img/icon-cancel.svg" alt="img" tabindex="11">Thoát</button>
            </div>

        </form>

    </div>
</div>


