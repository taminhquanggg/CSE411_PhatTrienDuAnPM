@using ObjectInfo
@{

    Layout = null;

    List<CSE_PostsInfo> _lst = new List<CSE_PostsInfo>();
    if (ViewBag.LstData != null)
    {
        _lst = ViewBag.LstData;
    }
}



@if (_lst?.Count > 0)
{
    foreach (var item in _lst)
    {
        <div class="col-lg-12">
            <div class="new-card">
                <div class="banner_new-card-container">
                    <img class="thumbnail-post" src="@item.Thumbnail" alt="">
                </div>
                <div class="content_new-card-container">
                    <h3>@item.Title</h3>
                    <span>@item.Created_Date</span>
                    <p>@item.Description</p>
                    <div>
                        <a href="/bai-viet/@item.Id">Xem <i class="fa-solid fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-lg-12">
        <div class="new-card">
            không có dữ liệu
        </div>
    </div>
}

<div class="foot-record">
    @Html.Raw(ViewBag.Paging)
</div>